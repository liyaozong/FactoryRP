<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="tech.yozo.factoryrp.ui.fragment.RepairInfoFragment">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:layout_above="@+id/linearLayout4">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:background="@color/colorBackground">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:background="@android:color/background_light"
                    android:paddingBottom="12dp" android:paddingTop="12dp" android:paddingStart="6dp"
                    android:paddingEnd="6dp" android:gravity="center_vertical">
                <TextView
                        android:text="@string/text_device_repair_group"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/textView62"/>
                <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/tv_repair_group"
                        android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:background="@android:color/background_light"
                    android:padding="6dp" android:layout_marginTop="1dp" android:gravity="center_vertical">
                <TextView
                        android:text="@string/text_repair_status"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/textView63"/>
                <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/spinner_repair_status"
                        android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:background="@android:color/background_light"
                    android:padding="6dp" android:layout_marginTop="1dp" android:gravity="center_vertical">
                <TextView
                        android:text="@string/text_device_fault_type"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/textView64"/>
                <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/spinner_trouble_type"
                        android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:background="@android:color/background_light"
                    android:padding="6dp" android:layout_marginTop="1dp" android:gravity="center_vertical">
                <TextView
                        android:text="@string/text_device_fault_reason"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/textView65"/>
                <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/spinner_trouble_reason"
                        android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:background="@android:color/background_light"
                    android:padding="6dp" android:layout_marginTop="1dp" android:gravity="center_vertical">
                <TextView
                        android:text="@string/text_repair_level"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/textView66"/>
                <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/spinner_repair_level"
                        android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:background="@android:color/background_light"
                    android:padding="6dp" android:layout_marginTop="1dp" android:gravity="center_vertical">
                <TextView
                        android:text="@string/text_is_stop_repair"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/textView67"/>
                <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/rg_need_stop"
                        android:orientation="horizontal">
                    <RadioButton
                            android:text="是"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/rb_stop_yes"
                            android:layout_weight="1"/>
                    <RadioButton
                            android:text="否"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/rb_stop_no"
                            android:layout_weight="1"/>
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:background="@android:color/background_light"
                    android:padding="6dp" android:layout_marginTop="1dp" android:gravity="center_vertical">
                <TextView
                        android:text="@string/text_stop_time"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/textView68"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:id="@+id/editText_stop_time" android:layout_weight="1" android:inputType="number"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:background="@android:color/background_light"
                    android:padding="6dp" android:layout_marginTop="1dp" android:gravity="center_vertical">
                <TextView
                        android:text="@string/text_repair_cost"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/textView69"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:id="@+id/editText_repair_cost" android:layout_weight="1" android:inputType="number"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:background="@android:color/background_light"
                    android:padding="6dp" android:layout_marginTop="6dp" android:gravity="center_vertical">
                <TextView
                        android:text="@string/text_repair_desc"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/textView70"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:ems="10"
                        android:id="@+id/editText_repair_desc" android:layout_weight="1" android:minLines="3"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:background="@android:color/background_light"
                    android:layout_marginTop="6dp" android:paddingStart="6dp" android:paddingTop="12dp"
                    android:paddingBottom="12dp" android:paddingEnd="6dp" android:gravity="center_vertical">
                <TextView
                        android:text="@string/text_repair_start_time"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/textView71"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/tv_start_time" android:layout_weight="1"
                        android:background="@android:color/background_light" android:textAlignment="viewStart"
                        android:drawableEnd="@drawable/ic_device_info"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:background="@android:color/background_light"
                    android:layout_marginTop="1dp"
                    android:paddingTop="12dp" android:paddingBottom="12dp" android:paddingStart="6dp"
                    android:paddingEnd="6dp" android:gravity="center_vertical">
                <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/textView72"
                        android:text="@string/text_repair_finish_time"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/tv_end_time" android:layout_weight="1"
                        android:background="@android:color/background_light" android:textAlignment="viewStart"
                        android:drawableEnd="@drawable/ic_device_info"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:background="@android:color/background_light"
                    android:padding="6dp" android:layout_marginTop="1dp" android:gravity="center_vertical">
                <TextView
                        android:text="@string/text_repair_total_time"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/textView73"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:id="@+id/editText_total_time" android:layout_weight="1" android:inputType="number"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" android:id="@+id/linearLayout4">
        <Button
                android:text="@string/action_start_repair"
                android:layout_height="wrap_content" android:id="@+id/b_start_repair" android:layout_weight="1"
                android:layout_width="0dp"/>
        <Button
                android:text="@string/action_finish_repair"
                android:layout_height="wrap_content" android:id="@+id/b_finish_repair" android:layout_weight="1"
                android:layout_width="0dp"/>
    </LinearLayout>
</RelativeLayout>
