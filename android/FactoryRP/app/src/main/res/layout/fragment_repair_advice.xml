<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="tech.yozo.factoryrp.ui.fragment.RepairInfoFragment" android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/lv_repair_advice_info"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:text="@string/action_start_repair"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/b_start_repair" android:onClick="onStartRepair"
        />
        <Button
                android:text="@string/action_finish_repair"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/b_finish_repair" android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>
