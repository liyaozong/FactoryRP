<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:layout_margin="6dp" >
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
        <Button
                android:text="选择设备"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:layout_alignTop="@+id/iv_select_device"
                android:layout_alignParentStart="true"
                android:id="@+id/b_select_device"
                android:layout_alignBottom="@+id/iv_select_device"
                android:background="@android:color/background_light"
                android:layout_toStartOf="@+id/iv_select_device" android:textAlignment="viewStart"
                android:textColor="@color/colorHighlight" android:layout_weight="1" android:onClick="onSelectDivice"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_scan"
                android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
                android:id="@+id/iv_select_device"
                android:padding="4dp" android:onClick="onScanDevice"/>
    </LinearLayout>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/lv_select_device"
            android:visibility="gone"/>
</LinearLayout>
