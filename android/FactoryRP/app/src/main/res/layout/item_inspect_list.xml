<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="wrap_content" android:gravity="center_vertical" android:layout_margin="6dp">

    <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp" app:srcCompat="@android:drawable/presence_away"
            android:id="@+id/iv_mtask_status" android:layout_margin="6dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_mtask_name"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_mtask_start_time"/>
    </LinearLayout>
</LinearLayout>
