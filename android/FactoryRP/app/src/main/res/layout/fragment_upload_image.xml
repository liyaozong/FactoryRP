<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:context="tech.yozo.factoryrp.ui.fragment.UploadImageFragment">

    <ImageButton
            android:layout_width="80dp"
            android:layout_height="120dp" app:srcCompat="@android:drawable/ic_menu_camera"
            android:id="@+id/ib_capture" android:background="@color/colorStatus"
    />

    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:visibility="visible" android:background="@color/colorBackground"
            android:padding="10dp">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:orientation="horizontal" android:id="@+id/ll_images">
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
