<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:layout_marginBottom="1dp" android:gravity="center_vertical"
              android:padding="10dp" android:background="@android:color/background_light">

    <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content" android:id="@+id/tv_spinner_desc"/>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/spinner_option" android:layout_weight="1"/>
</LinearLayout>