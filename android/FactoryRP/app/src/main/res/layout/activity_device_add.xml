<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="tech.yozo.factoryrp.ui.DeviceAddActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:background="@color/colorBackground">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:gravity="center_vertical"
                    android:background="@android:color/background_light" android:padding="4dp">
                <TextView
                        android:text="@string/text_device_code"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView5"
                />
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/et_device_code"
                        android:hint="@string/code_rule_hint" android:layout_weight="1"/>
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_scan"
                        android:id="@+id/ib_scan_device"
                        android:background="@android:color/background_light" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1" android:gravity="center_vertical"
                    android:background="@android:color/background_light" android:layout_marginTop="1dp"
                    android:padding="4dp">
                <TextView
                        android:text="@string/text_device_name"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"
                />
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="12"
                        android:id="@+id/et_device_name" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1" android:gravity="center_vertical"
                    android:layout_marginTop="1dp" android:background="@android:color/background_light"
                    android:padding="4dp">
                <TextView
                        android:text="@string/text_device_type"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView7"
                />
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="12"
                        android:id="@+id/et_device_type" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1" android:gravity="center_vertical"
                    android:background="@android:color/background_light" android:layout_marginTop="1dp"
                    android:padding="4dp">
                <TextView
                        android:text="@string/text_device_category"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView8"
                />
                <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner_device_category"
                        android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1" android:layout_marginTop="1dp"
                    android:background="@android:color/background_light" android:padding="4dp"
                    android:gravity="center_vertical">
                <TextView
                        android:text="@string/text_device_identify"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView9"
                />
                <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner_device_identify"
                        android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"
                    android:background="@android:color/background_light" android:layout_marginTop="1dp"
                    android:padding="4dp" android:gravity="center_vertical">
                <TextView
                        android:text="@string/text_device_status"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView12"
                />
                <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner_device_status"
                        android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1" android:layout_marginTop="1dp"
                    android:background="@android:color/background_light" android:padding="4dp"
                    android:gravity="center_vertical">
                <TextView
                        android:text="@string/text_device_using_dept"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView13"
                />
                <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner_device_dept"
                        android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"
                    android:background="@android:color/background_light" android:layout_marginTop="1dp"
                    android:paddingTop="12dp" android:paddingBottom="12dp" android:paddingStart="4dp"
                    android:paddingEnd="12dp" android:gravity="center_vertical">
                <TextView
                        android:text="@string/text_device_buy_date"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4"
                />
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_buy_date"
                        android:layout_weight="1" android:background="@android:color/background_light"
                        android:drawableEnd="@drawable/ic_device_info"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"
                    android:background="@android:color/background_light" android:layout_marginTop="1dp"
                    android:padding="4dp" android:gravity="center_vertical">
                <TextView
                        android:text="@string/text_device_using_place"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView14"
                />
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="12"
                        android:id="@+id/et_device_place" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1" android:layout_marginTop="1dp"
                    android:background="@android:color/background_light" android:padding="4dp"
                    android:gravity="center_vertical">
                <TextView
                        android:text="@string/text_device_operator"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView15"
                />
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="12"
                        android:layout_marginTop="2dp" android:id="@+id/et_device_operator" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"
                    android:background="@android:color/background_light" android:layout_marginTop="1dp"
                    android:padding="4dp" android:gravity="center_vertical">
                <TextView
                        android:text="@string/text_device_manufacturer"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView16"
                />
                <AutoCompleteTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="12"
                        android:layout_marginTop="2dp" android:id="@+id/et_device_manufacturer"
                        android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1" android:layout_marginTop="1dp"
                    android:background="@android:color/background_light" android:padding="4dp"
                    android:gravity="center_vertical">
                <TextView
                        android:text="@string/text_device_provider"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView17"
                />
                <AutoCompleteTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="12"
                        android:layout_marginTop="2dp" android:id="@+id/et_device_provider" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"
                    android:background="@android:color/background_light" android:layout_marginTop="1dp"
                    android:padding="4dp" android:gravity="center_vertical">
                <TextView
                        android:text="@string/text_device_desc"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView32"
                />
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:ems="12"
                        android:layout_marginTop="2dp" android:id="@+id/et_device_desc" android:minLines="3"
                        android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
