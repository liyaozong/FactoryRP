<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="tech.yozo.factoryrp.ui.DeviceAddActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:orientation="vertical">
            <TextView
                    android:text="@string/text_device_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:layout_alignBaseline="@+id/et_device_code" android:layout_alignBottom="@+id/et_device_code"
                    android:layout_alignParentStart="true" android:layout_marginStart="12dp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/et_device_code" android:layout_alignParentTop="true"
                    android:layout_marginTop="4dp" android:layout_toStartOf="@+id/ib_scan_device"
                    android:layout_marginRight="4dp" android:hint="不填写则自动编号"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_scan"
                    android:id="@+id/ib_scan_device" android:layout_alignTop="@+id/et_device_code"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@+id/et_device_code" android:layout_marginRight="4dp"
                    android:padding="4dp"
                    android:background="@android:color/background_light"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp" app:srcCompat="@color/colorBackground"
                    android:layout_below="@+id/et_device_code" android:id="@+id/imageView9"
                    android:layout_alignParentEnd="true" android:layout_marginTop="2dp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="12"
                    android:layout_below="@+id/imageView9" android:layout_alignEnd="@+id/ib_scan_device"
                    android:layout_marginTop="2dp" android:id="@+id/et_device_name"/>
            <TextView
                    android:text="@string/text_device_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6" android:layout_alignBaseline="@+id/et_device_name"
                    android:layout_alignBottom="@+id/et_device_name" android:layout_alignStart="@+id/textView5"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp" app:srcCompat="@color/colorBackground"
                    android:layout_below="@+id/et_device_name" android:layout_alignParentEnd="true"
                    android:layout_marginTop="2dp" android:id="@+id/imageView11"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="12"
                    android:layout_below="@+id/imageView11" android:layout_alignEnd="@+id/et_device_name"
                    android:layout_marginTop="2dp" android:id="@+id/et_device_type"/>
            <TextView
                    android:text="@string/text_device_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7" android:layout_alignBaseline="@+id/et_device_type"
                    android:layout_alignBottom="@+id/et_device_type" android:layout_alignStart="@+id/textView6"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp" app:srcCompat="@color/colorBackground"
                    android:layout_below="@+id/et_device_type" android:layout_alignParentEnd="true"
                    android:layout_marginTop="2dp" android:id="@+id/imageView12"/>
            <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_below="@+id/imageView12"
                    android:layout_alignEnd="@+id/et_device_type" android:layout_marginTop="2dp" android:id="@+id/spinner_device_category"
                    android:layout_alignStart="@+id/et_device_type" android:entries="@array/device_type"/>
            <TextView
                    android:text="@string/text_device_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:layout_alignBottom="@+id/spinner_device_category" android:layout_alignStart="@+id/textView7"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp" app:srcCompat="@color/colorBackground"
                    android:layout_below="@+id/spinner_device_category" android:layout_alignParentEnd="true"
                    android:id="@+id/imageView13" android:layout_marginTop="6dp"/>
            <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_below="@+id/imageView13"
                    android:layout_alignEnd="@+id/spinner_device_category" android:id="@+id/spinner_device_identify"
                    android:layout_alignStart="@+id/et_device_type" android:layout_marginTop="2dp"
                    android:entries="@array/device_indentify"/>
            <TextView
                    android:text="@string/text_device_identify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:layout_alignBottom="@+id/spinner_device_identify" android:layout_alignStart="@+id/textView8"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp" app:srcCompat="@color/colorBackground"
                    android:layout_below="@+id/spinner_device_identify" android:layout_alignParentEnd="true"
                    android:layout_marginTop="6dp" android:id="@+id/imageView14"/>
            <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_below="@+id/imageView14"
                    android:layout_alignEnd="@+id/spinner_device_identify" android:layout_marginTop="2dp" android:id="@+id/spinner_device_status"
                    android:layout_alignStart="@+id/et_device_type" android:entries="@array/device_using_status"/>
            <TextView
                    android:text="@string/text_device_using_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_alignBottom="@+id/spinner_device_status"
                    android:layout_alignStart="@+id/textView9" android:id="@+id/textView12"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp" app:srcCompat="@color/colorBackground"
                    android:layout_below="@+id/spinner_device_status" android:layout_alignParentEnd="true"
                    android:layout_marginTop="6dp" android:id="@+id/imageView15"/>
            <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_below="@+id/imageView15"
                    android:layout_alignEnd="@+id/spinner_device_status" android:layout_marginTop="2dp" android:id="@+id/spinner_device_dept"
                    android:layout_alignStart="@+id/et_device_type" android:entries="@array/device_using_dept"/>
            <TextView
                    android:text="@string/text_device_using_dept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_alignBottom="@+id/spinner_device_dept"
                    android:layout_alignStart="@+id/textView12" android:id="@+id/textView13"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp" app:srcCompat="@color/colorBackground"
                    android:layout_below="@+id/spinner_device_dept" android:layout_alignParentEnd="true"
                    android:id="@+id/imageView16" android:layout_marginTop="2dp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="12"
                    android:layout_below="@+id/imageView2" android:layout_alignEnd="@+id/spinner_device_dept"
                    android:layout_marginTop="2dp" android:id="@+id/et_device_place"/>
            <TextView
                    android:text="@string/text_device_using_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14" android:layout_alignBaseline="@+id/et_device_place"
                    android:layout_alignBottom="@+id/et_device_place" android:layout_alignStart="@+id/textView13"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp" app:srcCompat="@color/colorBackground"
                    android:layout_below="@+id/et_device_place" android:layout_alignParentEnd="true"
                    android:layout_marginTop="2dp" android:id="@+id/imageView17"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="12"
                    android:layout_below="@+id/imageView17" android:layout_alignEnd="@+id/et_device_place"
                    android:layout_marginTop="2dp" android:id="@+id/et_device_operator"/>
            <TextView
                    android:text="@string/text_device_operator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView15" android:layout_alignBaseline="@+id/et_device_operator"
                    android:layout_alignBottom="@+id/et_device_operator" android:layout_alignStart="@+id/textView14"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp" app:srcCompat="@color/colorBackground"
                    android:layout_below="@+id/et_device_operator" android:layout_alignParentEnd="true"
                    android:layout_marginTop="2dp" android:id="@+id/imageView18"/>
            <AutoCompleteTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="12"
                    android:layout_below="@+id/imageView18" android:layout_alignEnd="@+id/et_device_operator"
                    android:layout_marginTop="2dp" android:id="@+id/et_device_manufacturer"/>
            <TextView
                    android:text="@string/text_device_manufacturer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView16" android:layout_alignBaseline="@+id/et_device_manufacturer"
                    android:layout_alignBottom="@+id/et_device_manufacturer" android:layout_alignStart="@+id/textView15"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp" app:srcCompat="@color/colorBackground"
                    android:layout_below="@+id/et_device_manufacturer" android:layout_alignParentEnd="true"
                    android:layout_marginTop="2dp" android:id="@+id/imageView19"/>
            <AutoCompleteTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="12"
                    android:layout_below="@+id/imageView19" android:layout_alignEnd="@+id/et_device_manufacturer"
                    android:layout_marginTop="2dp" android:id="@+id/et_device_provider"/>
            <TextView
                    android:text="@string/text_device_provider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView17" android:layout_alignBaseline="@+id/et_device_provider"
                    android:layout_alignBottom="@+id/et_device_provider" android:layout_alignStart="@+id/textView16"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp" app:srcCompat="@color/colorBackground"
                    android:layout_below="@+id/et_device_provider" android:layout_alignParentEnd="true"
                    android:layout_marginTop="2dp" android:id="@+id/imageView20"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="12"
                    android:layout_below="@+id/imageView20" android:layout_alignEnd="@+id/et_device_provider"
                    android:layout_marginTop="2dp" android:id="@+id/et_device_desc" android:minLines="2"/>
            <TextView
                    android:text="@string/text_device_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView32" android:layout_alignBaseline="@+id/et_device_desc"
                    android:layout_alignBottom="@+id/et_device_desc" android:layout_alignStart="@+id/textView17"/>

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_below="@+id/imageView16"
                    android:layout_alignEnd="@+id/spinner_device_dept"
                    android:id="@+id/et_buy_date"
                    android:layout_marginTop="2dp"
                    android:layout_alignStart="@+id/et_device_code"/>
            <TextView
                    android:text="@string/text_device_buy_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4" android:layout_alignBaseline="@+id/et_buy_date"
                    android:layout_alignBottom="@+id/et_buy_date" android:layout_alignStart="@+id/textView13"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp" app:srcCompat="@color/colorBackground"
                    android:layout_below="@+id/et_buy_date" android:layout_alignParentEnd="true"
                    android:id="@+id/imageView2" android:layout_marginTop="2dp"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
