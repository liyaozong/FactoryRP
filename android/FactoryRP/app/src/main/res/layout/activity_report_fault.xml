<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="tech.yozo.factoryrp.ui.ReportFaultActivity" tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="0dp">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical" android:background="@color/colorBackground">

            <include layout="@layout/select_device_element" android:id="@+id/linearLayout"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:background="@android:color/background_light"
                    android:padding="4dp" android:layout_marginTop="2dp">
                <TextView
                        android:text="@string/text_device_fault_time"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView41"
                />
                <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_fault_time"
                        android:layout_weight="1" android:background="@android:color/background_light"
                        android:drawableEnd="@drawable/ic_device_info" android:textAlignment="viewStart"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light" android:layout_marginTop="1dp"
                    android:padding="4dp">
                <TextView
                        android:text="@string/text_device_fault_level"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView42"
                />
                <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner_fault_level"
                        android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:padding="4dp" android:layout_marginTop="1dp"
                    android:background="@android:color/background_light">
                <TextView
                        android:text="@string/text_device_fault_type"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView43"
                />
                <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner_fault_type"
                        android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginTop="1dp" android:padding="4dp"
                    android:background="@android:color/background_light">
                <TextView
                        android:text="@string/text_device_repair_group"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView44"
                />
                <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner_repair_group"
                        android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginTop="1dp" android:padding="4dp"
                    android:background="@android:color/background_light">
                <TextView
                        android:text="@string/text_device_running_status"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView45"
                />
                <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner_device_running_status"
                        android:entries="@array/device_running_status"
                        android:layout_weight="1"
                        android:theme="@android:style/Widget.DeviceDefault.DropDownItem.Spinner"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginTop="1dp" android:padding="4dp"
                    android:background="@android:color/background_light">
                <TextView
                        android:text="@string/text_device_operator"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView46"
                />
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="12"
                        android:id="@+id/et_operator" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginTop="1dp" android:padding="4dp"
                    android:background="@android:color/background_light">
                <TextView
                        android:text="@string/text_device_operator_phone"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView47"
                />
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ems="12"
                        android:id="@+id/et_phone_number" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginTop="1dp" android:padding="4dp"
                    android:background="@android:color/background_light">
                <TextView
                        android:text="@string/text_device_using_place"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView48"
                />
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="12"
                        android:id="@+id/et_device_place" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginTop="1dp" android:padding="4dp"
                    android:background="@android:color/background_light">
                <TextView
                        android:text="@string/text_device_fault_desc"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView50"
                />
                <EditText
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:ems="12"
                        android:id="@+id/et_fault_desc" android:minLines="3"
                        android:layout_weight="1" android:layout_width="0dp"/>
            </LinearLayout>
            <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:visibility="gone" android:background="@android:color/background_light"
                    android:padding="8dp">
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:orientation="horizontal" android:id="@+id/ll_images">
                    <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_camera"
                            android:id="@+id/ib_capture" android:background="@android:color/background_light"/>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
