<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="wrap_content" android:gravity="center_vertical" android:padding="8dp">

    <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp" app:srcCompat="@android:drawable/presence_away"
            android:id="@+id/iv_inspect_device_status"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_inspect_device_name" android:layout_weight="1"
            android:textSize="18sp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_device_info"
            android:id="@+id/imageView13"/>
</LinearLayout>
