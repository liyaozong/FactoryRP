<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="tech.yozo.factoryrp.ui.AboutUsActivity" android:orientation="vertical"
        android:background="@color/colorBackground">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:padding="8dp" android:gravity="center_horizontal"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true" android:id="@+id/linearLayout2">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/imageView29"
                android:layout_marginTop="20dp" android:layout_marginBottom="12dp"/>
        <TextView
                android:text="@string/operator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView37" android:textSize="18sp"/>
        <TextView
                android:text="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView59" android:textSize="18sp"
                android:layout_marginTop="6dp"/>
    </LinearLayout>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:layout_below="@+id/linearLayout2"
            android:layout_centerHorizontal="true" android:layout_marginTop="20dp" android:padding="8dp">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:paddingTop="6dp"
                  android:paddingBottom="6dp">
            <TextView
                    android:text="公司官网"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView51"/>
            <TextView
                    android:text="www.yuntuiot.com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView38" android:paddingStart="20dp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:paddingBottom="6dp"
                  android:paddingTop="6dp">
            <TextView
                    android:text="客服电话"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView54"/>
            <TextView
                    android:text="15120058280"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView53" android:paddingStart="20dp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:paddingBottom="6dp"
                  android:paddingTop="6dp">
            <TextView
                    android:text="技术支持邮箱"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView56"/>
            <TextView
                    android:text="xugong9600@dingtalk.com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView55" android:paddingStart="20dp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:paddingTop="6dp"
                  android:paddingBottom="6dp">
            <TextView
                    android:text="微信技术支持"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView58"/>
            <TextView
                    android:text="xiaohe947546779"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView57" android:paddingStart="20dp"/>
        </TableRow>
    </TableLayout>
    <TextView
            android:text="版权所有"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView60" android:textAlignment="center"
            android:layout_marginBottom="2dp"
            android:layout_above="@+id/textView61" android:layout_centerHorizontal="true"/>
    <TextView
            android:text="CopyRight 2016-2018"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView61"
            android:layout_marginBottom="12dp"
            android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
</RelativeLayout>
