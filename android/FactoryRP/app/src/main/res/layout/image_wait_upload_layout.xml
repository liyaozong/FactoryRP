<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp" app:srcCompat="@android:drawable/ic_menu_gallery"
            android:id="@+id/iv_wait_upload"/>
    <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp" app:srcCompat="@drawable/ic_file_delete"
            android:id="@+id/iv_image_del"/>
    <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp" app:srcCompat="@drawable/ic_file_upload"
            android:id="@+id/iv_image_upload" android:layout_gravity="top|end"/>
</FrameLayout>
