<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="tech.yozo.factoryrp.ui.fragment.PersonFragment"
                                             android:background="#d6d7d7">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp" app:srcCompat="@drawable/ic_person"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="16dp" android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent" android:id="@+id/imageView3"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_person_name"
            app:layout_constraintTop_toTopOf="@+id/imageView3"
            android:layout_marginTop="24dp" app:layout_constraintLeft_toRightOf="@+id/imageView3"
            android:layout_marginLeft="24dp"/>

    <Button
            android:text="@string/action_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_logout"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_person_name"/>
</android.support.constraint.ConstraintLayout>
