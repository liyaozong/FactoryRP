<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@android:color/background_light">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_maintain_device_name"
                android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                android:layout_margin="4dp" android:textSize="20sp" android:textColor="@color/colorHighlight"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp" app:srcCompat="@color/colorBackground"
                android:layout_below="@+id/tv_maintain_device_name" android:layout_alignParentStart="true"
                android:id="@+id/imageView4" android:layout_marginLeft="4dp" android:layout_marginRight="4dp"/>
        <TextView
                android:text="设备编号："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_below="@+id/imageView4"
                android:layout_alignParentStart="true" android:id="@+id/textView24" android:layout_margin="4dp"
                android:textSize="16sp"/>
        <TextView
                android:text="规格型号："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_below="@+id/textView24"
                android:layout_alignParentStart="true" android:id="@+id/textView25" android:layout_margin="4dp"
                android:textSize="16sp"/>
        <TextView
                android:text="保养级别："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_below="@+id/textView25"
                android:layout_alignParentStart="true" android:id="@+id/textView26" android:layout_margin="4dp"
                android:textSize="16sp"/>
        <TextView
                android:text="保养负责人："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_below="@+id/textView26"
                android:layout_alignParentStart="true" android:id="@+id/textView27" android:layout_margin="4dp"
                android:textSize="16sp"/>
        <TextView
                android:text="下次保养时间："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_below="@+id/textView27"
                android:layout_alignParentStart="true" android:id="@+id/textView28" android:layout_margin="4dp"
                android:textSize="16sp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_maintain_device_code"
                android:layout_alignBaseline="@+id/textView24" android:layout_alignBottom="@+id/textView24"
                android:layout_toEndOf="@+id/textView24" android:textSize="16sp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_maintain_device_type" android:layout_alignBaseline="@+id/textView25"
                android:layout_alignBottom="@+id/textView25" android:layout_toEndOf="@+id/textView25"
                android:textSize="16sp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_maintain_level"
                android:layout_alignBaseline="@+id/textView26" android:layout_alignBottom="@+id/textView26"
                android:layout_toEndOf="@+id/textView26" android:textSize="16sp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_maintainer" android:layout_alignBaseline="@+id/textView27"
                android:layout_alignBottom="@+id/textView27" android:layout_toEndOf="@+id/textView27"
                android:textSize="16sp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_next_time"
                android:layout_alignBaseline="@+id/textView28" android:layout_alignBottom="@+id/textView28"
                android:layout_toEndOf="@+id/textView28" android:textSize="16sp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_device_info"
                android:layout_alignTop="@+id/tv_maintain_device_name" android:layout_alignParentEnd="true"
                android:id="@+id/imageView14"/>
    </RelativeLayout>
</LinearLayout>
