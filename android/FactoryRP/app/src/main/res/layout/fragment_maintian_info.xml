<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="tech.yozo.factoryrp.ui.fragment.RepairInfoFragment">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:layout_above="@+id/linearLayout3">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:background="@color/colorBackground">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:padding="8dp" android:layout_marginTop="1dp"
                    android:background="@android:color/background_light">
                <TextView
                        android:text="@string/text_device_name"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/textView63"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tv_device_name"
                        android:layout_weight="2"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:padding="8dp" android:layout_marginTop="1dp"
                    android:background="@android:color/background_light">
                <TextView
                        android:text="@string/text_device_code"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/textView64"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tv_device_code"
                        android:layout_weight="2"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:padding="8dp" android:layout_marginTop="1dp"
                    android:background="@android:color/background_light">
                <TextView
                        android:text="@string/text_device_type"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/textView66"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tv_device_type"
                        android:layout_weight="2"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:padding="8dp" android:layout_marginTop="1dp"
                    android:background="@android:color/background_light">
                <TextView
                        android:text="@string/text_device_using_dept"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/textView68"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tv_device_dept"
                        android:layout_weight="2"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:padding="8dp" android:layout_marginTop="1dp"
                    android:background="@android:color/background_light">
                <TextView
                        android:text="设备分类："
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/textView70"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tv_device_category"
                        android:layout_weight="2"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:padding="8dp" android:layout_marginTop="6dp"
                    android:background="@android:color/background_light">
                <TextView
                        android:text="保养级别："
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/textView72"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tv_maintain_level"
                        android:layout_weight="2"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:padding="8dp" android:layout_marginTop="1dp"
                    android:background="@android:color/background_light">
                <TextView
                        android:text="循环方式："
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/textView74"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tv_cycle_type"
                        android:layout_weight="2"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:padding="8dp" android:layout_marginTop="1dp"
                    android:background="@android:color/background_light">
                <TextView
                        android:text="循环周期："
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/textView76"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tv_cycle_time" android:layout_weight="2"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:padding="8dp" android:layout_marginTop="1dp"
                    android:background="@android:color/background_light">
                <TextView
                        android:text="上次保养时间："
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/textView78"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tv_before_time"
                        android:layout_weight="2"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:padding="8dp" android:layout_marginTop="1dp"
                    android:background="@android:color/background_light">
                <TextView
                        android:text="下次保养时间："
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/textView80"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tv_next_time"
                        android:layout_weight="2"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:padding="8dp" android:layout_marginTop="1dp"
                    android:background="@android:color/background_light">
                <TextView
                        android:text="保养部位："
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/textView82"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tv_maintain_part"
                        android:layout_weight="2"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:padding="8dp" android:layout_marginTop="1dp"
                    android:background="@android:color/background_light">
                <TextView
                        android:text="保养标准："
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/textView84"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tv_maintain_standard" android:layout_weight="2"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:padding="8dp" android:layout_marginTop="1dp"
                    android:background="@android:color/background_light">
                <TextView
                        android:text="保养人员："
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/textView85"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tv_maintainer" android:layout_weight="2"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:padding="8dp" android:layout_marginTop="6dp"
                    android:background="@android:color/background_light">
                <TextView
                        android:text="任务描述："
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/textView86"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tv_task_desc" android:layout_weight="2"
                        android:minLines="3"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
