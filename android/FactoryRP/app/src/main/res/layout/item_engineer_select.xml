<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:padding="6dp"
              android:descendantFocusability="blocksDescendants">

    <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content" android:id="@+id/textView_number" android:textSize="18sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView_name" android:layout_weight="1"
            android:textSize="18sp"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkBox_isSelected" android:focusable="false"/>
</LinearLayout>
