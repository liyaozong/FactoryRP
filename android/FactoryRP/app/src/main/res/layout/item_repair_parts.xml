<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="wrap_content" android:background="@color/colorBackground"
              android:orientation="vertical">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/background_light" android:padding="4dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/tv_parts_name" android:layout_margin="4dp" android:textSize="20sp"
                android:textColor="@color/colorHighlight" android:layout_weight="1"/>
        <ImageButton
                android:layout_width="50dp"
                android:layout_height="35dp" app:srcCompat="@android:drawable/presence_busy"
                android:id="@+id/ib_delete_part" android:background="@android:color/background_light"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:padding="6dp"
            android:background="@android:color/background_light" android:layout_marginTop="1dp">
        <TextView
                android:text="备件编号："
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView33" android:textSize="16sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_parts_no"
                android:textSize="16sp" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:padding="6dp"
            android:background="@android:color/background_light">
        <TextView
                android:text="规格型号："
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView34"
                android:textSize="16sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_parts_type"
                android:textSize="16sp" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:padding="6dp"
            android:background="@android:color/background_light" android:layout_marginBottom="2dp"
            android:layout_gravity="center_vertical">
        <TextView
                android:text="@string/text_number"
                android:layout_width="120dp"
                android:layout_height="wrap_content" android:id="@+id/textView49"/>
        <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_parts_num" android:layout_weight="1" android:entries="@array/parts_number"/>
        <TextView
                android:text="个"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView81"/>
    </LinearLayout>
</LinearLayout>
