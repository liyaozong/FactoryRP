<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="tech.yozo.factoryrp.ui.InspectDetailActivity" android:orientation="vertical"
>

    <TextView
            android:text="设备名称"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tv_inspect_device_name" android:textSize="26sp"
            android:textAlignment="center" android:layout_margin="8dp"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp" app:srcCompat="@color/colorBackground" android:id="@+id/imageView10"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="1">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical" android:id="@+id/ll_inspect_device_item"/>
    </ScrollView>
    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:visibility="visible" android:background="@android:color/background_light"
            android:padding="8dp">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:orientation="horizontal" android:id="@+id/ll_images">
            <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp" app:srcCompat="@android:drawable/ic_menu_camera"
                    android:id="@+id/ib_capture" android:background="@color/colorBackground"/>
        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="@string/action_save_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button_inspect_detail_save"
                android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
