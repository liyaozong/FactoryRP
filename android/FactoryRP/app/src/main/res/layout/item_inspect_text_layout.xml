<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:layout_marginBottom="1dp" android:padding="10dp"
              android:background="@android:color/background_light">

    <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content" android:id="@+id/tv_text_desc"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText_text" android:layout_weight="1" android:minLines="2"/>
</LinearLayout>
